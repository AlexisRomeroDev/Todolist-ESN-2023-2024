{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <div class="container">

        <h1>{{ todo.name }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ todo.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ todo.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ todo.description }}</td>
                </tr>
                <tr>
                    <th>Fait</th>
                    <td>{{ todo.isDone ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Priorit√©</th>
                    <td> {% if todo.priority is not null %}
                            {{ todo.priority.name }}
                        {% endif %}</td>
                </tr>
                <tr>
                    <th>Fichier</th>
                    <td> {% if todo.pdfFilename is not null %}
                            <a href="{{ asset('uploads/pdfFiles/' ~ todo.pdfFilename) }}">Fichier (PDF)</a>
                        {% endif %}</td>
                </tr>

            </tbody>
        </table>

        <a href="{{ path('app_todo_index') }}">back to list</a>

        <a href="{{ path('app_todo_edit', {'id': todo.id}) }}">edit</a>

        {{ include('todo/_delete_form.html.twig') }}

    </div>
{% endblock %}
